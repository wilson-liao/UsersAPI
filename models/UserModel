const { Timestamp } = require("bson")
const mongoose = require("mongoose")

const userSchema = mongoose.Schema(
    {
        name: {
            type: String,
            required: [true, "Please enter user name"]
        },
        pfp: {
            data: Buffer,
            required: false
        }
    },
    {
        timestamps: true
    }
)


const user = mongoose.model('user', userSchema);

module.exports = user;
